{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ]
}
